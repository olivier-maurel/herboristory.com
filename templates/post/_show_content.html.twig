<section id="descriptionPage" class="py-5 my-2">
    <h2 class="h1 text-center text-green-h text-uppercase fw-bold">Description</h2>
    <p class="mt-3 pt-4 border-top" style="border-color: #e0f9e1 !important;">{{ post.content.descriptionPage }}</p>
    
    {% if (post.plant is not null) %}
    <div class="panel-group accordion-style-01 no-margin-bottom" id="accordion-style-01">
        {% for feature, content in (post.plant.feature|getFeatures) %}
            {% if content is not null %}
                <div class="panel bg-transparent">
                    <div class="panel-heading">
                        <a class="accordion-toggle collapsed" data-bs-toggle="collapse" data-bs-parent="#accordion-style-01" href="#accordion-feature-{{ feature }}" aria-expanded="false">
                            <div class="panel-title">
                                <span class="text-extra-dark-gray font-weight-500 d-inline-block">
                                    <span class="d-inline-block margin-25px-right"></span>{{ feature }}
                                </span>
                            </div>
                        </a>
                    </div>
                    <div id="accordion-feature-{{ feature }}" class="panel-collapse collapse" data-bs-parent="#accordion-style-01">
                        <div class="panel-body">
                            <div class="border-left border-width-2px border-color-fast-green padding-40px-left">{{ content }}</div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    {% endif %}
</section>

