
{% for key,post in posts %}
    <li class="col-lg-10 m-auto my-1 flex-center justify-content-between bg-beige round-sm overflow-hidden" style="padding: 2px;">
        <a href="{{ path('app_post_show', {slug:post.slug}) }}" class="bg-light flex-center justify-content-between w-100 round-sm">
            <div>
                <img src="{{ post.image }}" style="height: 60px; width: 120px; object-fit: cover; border-radius: 5px 0 0 5px;">
            </div>
            <div class="text-start col px-3 m-0 d-flex flex-column">
                <span class="h5 font-weight-500 text-dark m-0">{{ post.plant.commonName }}</span>
                <span class="small text-muted opacity-75" style="line-height: initial;">{{ post.plant.scientificGenus ~ ' ' ~ post.plant.scientificSpecies }}</span>
            </div>
            <div class="d-flex px-3">
                {% for category in post.plant.category %}
                    <i class="fa {{ category|getIcon }} mx-1 text-white round type-icon" title="{{ category|getAlt }}"></i>
                {% endfor %}
            </div>
        </a>
    </li>
{% endfor %}
<div class="col-lg-8 m-auto my-1 p-2 flex-center position-relative">
    <div id="loaderPaginator"></div>
</div>