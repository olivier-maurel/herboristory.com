<section class="p-0 position-sticky" style="top: 1.4rem;">
    <div class="card overflow-auto bg-green-fast-light" style="height: calc(100vh - 2.8rem)">
        <div class="card-head pt-4">
            <span class="h5 alt-font small text-center d-block mb-0">Sommaire</span>
            <ul class="grid-filter nav nav-tabs justify-content-center border-0 text-uppercase font-weight-500 alt-font border-bottom pb-3">
                <li class="nav"><a href="#descriptionPage" class="btn btn-sm">Description</a></li>
                {% if post.content.medicinalPage is not null %}
                    <li class="nav"><a href="#medicinalPage" class="btn btn-sm">Médicinale</a></li>
                {% endif %}
    
                {% if post.content.alimentalPage is not null %}
                    <li class="nav"><a href="#alimentalPage" class="btn btn-sm">Comestible</a></li>
                {% endif %}
    
                {% if post.content.agricolPage is not null %}
                    <li class="nav"><a href="#agricolPage" class="btn btn-sm">Agricole</a></li>
                {% endif %}
    
                {% if post.content.industrialPage is not null %}
                    <li class="nav"><a href="#industrialPage" class="btn btn-sm">Artisanale</a></li>
                {% endif %}

                {% if post.content.images is not null %}
                    <li class="nav"><a href="#imagesPage" class="btn btn-sm">Images</a></li>
                {% endif %}

                {% if post.content.links is not null %}
                    <li class="nav"><a href="#linksPage" class="btn btn-sm">Liens</a></li>
                {% endif %}
            </ul>
        </div>
        <div class="card-body">
            <table class="w-100 mt-4">
                <tbody>
                    <tr>
                        <td class="text-muted small text-end">Nom commun : </td>
                        <td class="text-black text-uppercase fw-bold ps-4">{{ post.plant.commonName }}</td>
                    </tr>
                    <tr>
                        <td class="text-muted small text-end">Classe : </td>
                        <td class="text-black text-uppercase fw-bold ps-4">{{ post.plant.scientificClass }}</td>
                    </tr>
                    <tr>
                        <td class="text-muted small text-end">Ordre : </td>
                        <td class="text-black text-uppercase fw-bold ps-4">{{ post.plant.scientificOrder }}</td>
                    </tr>
                    <tr>
                        <td class="text-muted small text-end">Famille : </td>
                        <td class="text-black text-uppercase fw-bold ps-4">{{ post.plant.scientificFamily }}</td>
                    </tr>
                    <tr>
                        <td class="text-muted small text-end">Genre : </td>
                        <td class="text-black text-uppercase fw-bold ps-4">{{ post.plant.scientificGenus }}</td>
                    </tr>
                    <tr>
                        <td class="text-muted small text-end">Espèce : </td>
                        <td class="text-black text-uppercase fw-bold ps-4">{{ post.plant.scientificSpecies }}</td>
                    </tr>
                </tbody>
            </table>
            {% if attr.color is defined %}
            <div>
                <h5>Couleur</h5>
                <ul>
                    {% for color in attr.color %}
                        <li>
                            {{ color | getAttrRender() | raw }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
            {% if attr.season is defined %}
            <div>
                <h5>Saisons</h5>
                <ul>
                    {% for season in attr.season %}
                        <li>
                            {{ season | getAttrRender() | raw }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
            {% if attr.habitat is defined %}
            <div>
                <h5>Habitats</h5>
                <ul>
                    {% for habitat in attr.habitat %}
                        <li>
                            {{ habitat | getAttrRender() | raw }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
            <div>
                <h5>Similarités</h5>
                <ul>
                    {% for plant in post.plant.similitudes %}
                        <!-- <li><a href="{{ path('app_post_show', {slug: plant.post.slug}) }}">
                            <img src="{{ plant.post.image }}" class="img-round-sm">
                            {{ plant.commonName }}
                        </a></li> -->
                        <li class="col-lg-12 m-auto my-1 flex-center justify-content-between bg-beige round-sm overflow-hidden" style="padding: 2px;">
                            <a href="{{ path('app_post_show', {slug:plant.post.slug}) }}" title="{{ plant.commonName }}" class="bg-light flex-center justify-content-between w-100 round-sm">
                                <div>
                                    <img src="{{ plant.post.image }}" style="height: 40px; width: 100px; object-fit: cover; border-radius: 5px 0 0 5px;">
                                </div>
                                <div class="text-start col px-2 m-0 d-flex flex-column">
                                    <span class="h6 font-weight-500 text-dark m-0">{{ plant.commonName | u.truncate(25, '...') }}</span>
                                    <span class="small text-muted opacity-75" style="line-height: initial;">{{ plant.scientificGenus ~ ' ' ~ plant.scientificSpecies }}</span>
                                </div>
                                <div class="d-flex px-2">
                                    {% for category in plant.category %}
                                        <i class="fa {{ category|getIcon }} mx-1 text-white round type-icon type-icon-sm" title="{{ category|getAlt }}"></i>
                                    {% endfor %}
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>