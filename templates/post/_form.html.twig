{% set plant = (plant is defined) ? plant : null %}
{{ form_start(form) }}
    {{ form_errors(form) }}
    {{ form_row(form.plant) }}
    {{ form_row(form.title, {value: ((plant is not null) ? plant.commonName : post.title), attr: {class: 'disabled'}}) }}
    {{ form_row(form.slug) }}
    {{ form_row(form.description) }}
    {{ form_row(form.keywords) }}
    {{ form_row(form.image) }}
    {{ form_row(form.content.description_page) }}
    {{ form_row(form.content.alimental_page) }}
    {{ form_row(form.content.medicinal_page) }}
    {{ form_row(form.content.agricol_page) }}
    {{ form_row(form.content.industrial_page) }}
    {{ form_row(form.content.images) }}
    {{ form_row(form.content.links) }}
    {{ form_row(form._token) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form, {'render_rest': true}) }}
