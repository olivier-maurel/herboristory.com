{% extends 'base.html.twig' %}

{% block title %}Plant index{% endblock %}

{% block body %}
    <h1>Plant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CommonName</th>
                <th>Scientific_class</th>
                <th>Scientific_order</th>
                <th>Scientific_family</th>
                <th>Scientific_genus</th>
                <th>Scientific_species</th>
                <th>Iucn_redlist</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plant in plants %}
            <tr>
                <td>{{ plant.id }}</td>
                <td>{{ plant.commonName }}</td>
                <td>{{ plant.scientificClass }}</td>
                <td>{{ plant.scientificOrder }}</td>
                <td>{{ plant.scientificFamily }}</td>
                <td>{{ plant.scientificGenus }}</td>
                <td>{{ plant.scientificSpecies }}</td>
                <td>{{ plant.iucnRedlist }}</td>
                <td>
                    <a href="{{ path('app_plant_show', {'id': plant.id}) }}">show</a>
                    <a href="{{ path('app_plant_edit', {'id': plant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_plant_new') }}">Create new</a>
{% endblock %}
